<%
// The name of the author to bold - you can change this as needed
const authorToBold = 'Sereina M. Graber';
function formatAuthors(authorString) {
  return authorString.split(', ').map(author => 
    author.trim().toLowerCase() === authorToBold.toLowerCase()
      ? `<b>${author.trim()}</b>`
      : author.trim()
  ).join(', ');
}
%>
<div class="list quarto-listing-default">
    <% for (const item of items) { %>
    <div class="quarto-post image-right" <%= metadataAttrs(item) %>>
        <div class="thumbnail">
            <p>
                <% if (item.image) { %>
                <img alt="<%= item.title %>" src="<%= item.image %>" class="thumbnail-image">
                <% } %>
            </p>
        </div>
        <div class="body">
            <div class="no-anchor listing-pub-title listing-title">
                <a href="<%= item.path %>" class="listing-title-link"><%= item.title %></a>
            </div>
            <div class="listing-pub-author listing-author">
                <%= formatAuthors(item.author) %>
            </div>
            <div class="metadata-value listing-pub-journal listing-publication">
                <% if (item.journ) { %>
                    <i><%= item.journ %></i><% if (item.issue) { %>, <%= item.issue %><% } %><% if (item.page) { %>, <%= item.page %><% } %><% if (item.year) { %>, <%= item.year %><% } %>
                <% } %>
            </div>
            <div class="metadata">
                <div class="listing-pub-number">
                    <%= item.pub_number %>
                </div>
                <% if (item.description) { %>
                <div class="listing-description">
                    <%= item.description %>
                </div>
                <% } %>
                <% if (item.url_source) { %>
                <div class="listing-pub-url">
                    <a href="<%- item.url_source %>">
                        <p style="color:#FA2FBD;">URL <i class="bi bi-box-arrow-up-right"></i></p>
                    </a>
                </div>
                <% } %>
                <% if (item.url_preprint) { %>
                <div class="listing-pub-url">
                    <a href="<%- item.url_preprint %>">
                        <p style="color:#FA2FBD;">preprint URL <i class="bi bi-box-arrow-up-right"></i></p>
                    </a>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <% } %>
</div>

